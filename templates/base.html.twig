<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link rel="stylesheet" href="{{ asset('css/styles.css') }}">
    <link rel="stylesheet" href="{{ asset('css/navBar.css') }}">
    <link rel="icon" href="{{ asset('image/favicon.png') }}">
    {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}

</head>
<body>
<header>

    {% block header %}{% endblock %}
    <nav>
        <a href="{{ path('main_home') }}">Home</a>
        <a href="{{ path('main_Aboutus') }}">About</a>
        <a href="{{ path('wish_list') }}">id√©e</a>
        <a href="{{ path('wish_formu') }}">Formulaire</a>
        {% if  app.user %}
            <a href="{{ path('app_logout') }}">se deco</a>
        {% endif %}

        {% if not app.user %}
            <a href="{{ path('app_login') }}">se connecter</a>
        {% endif %}

        {% if not app.user %}
            <a href="{{ path('main_homeMain') }}">acceuil</a>
        {% endif %}

        {% set admin = false %}
            {% if app.user %}
                 {% for roles in app.user.roles %}
                    {% if roles == "ROLE_ADMIN" %}
                        {% set admin = true %}
                    {% endif %}
                 {% endfor %}
                {% if admin == true %}
                    <a href="{{ path('admin') }}">admin</a>
                         {% else %}
                            <a href="{{ path('main_homeMain') }}">acceuil</a>
                {% endif %}
            {% endif %}
        <div class="animation start-home"></div>
    </nav>

</header>

{% block body %}{% endblock %}

<footer>
    {% block footer %}{% endblock %}
</footer>
</body>
</html>
