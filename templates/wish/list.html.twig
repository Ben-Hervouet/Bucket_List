{% extends 'base.html.twig' %}
{% block header %}

    <img id="a" src="{{ asset('image/logo-512 (1).png') }}">
    <h1 id="b">CHICKEN BUCKET</h1>
    <p> {{ app.user.username }}</p>
{% endblock %}

{% block body %}
<main>
    <h1>LIST IDEE</h1>

    {% if wishes %}
        {% for wish in wishes %}
            <a href="{{ path('wish_detail',{'id':wish.id}) }}">
            <p>{{ wish.title }} - {{ wish.dateCreated | date("d-m-Y H:i") }}</p>
            </a>
        {% endfor %}
    {% endif %}

</main>
{% endblock %}

{% block footer %}
    <div>
        <p>@Bucket-Lis - {{ "now"|date("d/m/Y") }}</p>
    </div>
{% endblock %}
